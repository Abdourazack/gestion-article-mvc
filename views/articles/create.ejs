<%- include('../layouts/header') %>

<div class="container my-5">
  <div class="card shadow-lg rounded-4 p-4">
    <h3 class="mb-4 text-primary fw-bold">
      <i class="bi bi-plus-circle me-2"></i>Ajouter un article
    </h3>

    <form action="/articles/add" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="titre" class="form-label">Titre</label>
        <input
          type="text"
          class="form-control"
          id="titre"
          name="titre"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="description"
          name="description"
          rows="4"
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="photo" class="form-label">Photo</label>
        <input
          type="file"
          class="form-control"
          id="photo"
          name="photo"
          accept="image/*"
        />
      </div>

      <div class="mb-3">
        <label for="prix" class="form-label">Prix (€)</label>
        <input
          type="number"
          step="0.01"
          class="form-control"
          id="prix"
          name="prix"
          required
        />
      </div>

      <div class="mb-4">
        <label for="type_id" class="form-label">Type d'article</label>
        <select class="form-select" id="type_id" name="type_id" required>
          <option value="">-- Sélectionner --</option>
          <% types.forEach(type => { %>
          <option value="<%= type.type_id %>"><%= type.nom %></option>
          <% }) %>
        </select>
      </div>

      <div class="d-flex justify-content-end">
        <a href="/articles" class="btn btn-secondary me-2">Annuler</a>
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-check-circle me-1"></i> Enregistrer
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('../layouts/footer') %>
